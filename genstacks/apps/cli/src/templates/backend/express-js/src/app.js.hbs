const express = require('express');
const dotenv = require('dotenv');

dotenv.config();

const app = express();
const port = process.env.PORT || 4000;

app.use(express.json());

app.get('/', (req, res) => {
  res.send('Hello from Express + JavaScript!');
});

app.listen(port, () => {
  console.log(`Server running at http://localhost:${port}`);
}); 